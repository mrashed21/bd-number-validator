{
  "name": "bd-number-validator",
  "version": "1.0.6",
  "description": "Bangladesh phone validator + React Tailwind input",
  "author": "Muhammad Rashed",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    },
    "./dist/*": "./dist/*"
  },

  "files": ["dist"],

  "scripts": {
    "build": "tsup",
    "prepare": "npm run build"
  },

  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },

  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.22",
    "cpy-cli": "^6.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsup": "^6.7.0",
    "typescript": "^5.3.0"
  }
}
